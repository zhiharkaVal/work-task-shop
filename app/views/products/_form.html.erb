<%= form_for :product, url: products_path do |f| %>
  <%= render "errors" %>

  <div class="form-group row form-group-lg-margin">
    <%= f.label :name, class: 'col-sm-2 plaintext' %>
    <%= f.text_field :name, class: 'form-control col-sm customBorder', placeholder: 'Product name' %>
  </div>
  <div class="form-group row form-group-margin">
    <%= f.label :stock, class: 'col-sm-2 plaintext' %>
    <%= f.number_field :stock, min: 1, class: 'form-control col-sm customBorder' %>
  </div>
  <div class="form-group row form-group-margin">
    <%= f.label :price, class: 'col-sm-2 plaintext' %>
    <%= f.number_field :price, min: 0, step: 0.01, class: 'form-control col-sm customBorder' %>
  </div>
  <div class="form-group row form-group-lg-margin">
    <div class="col-sm-6 right-alignment">
      <%= link_to "<button class='btn btn-primary custom-btn'>Cancel</button>".html_safe, products_path, :id=>"backTo-catalog-btn" %>
    </div>
    <div class="col-sm-6">
      <%= f.submit class: 'btn btn-primary custom-btn' %>
    </div>
  </div>
<% end %>
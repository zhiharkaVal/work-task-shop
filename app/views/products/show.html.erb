<div class="product" align="center">
  <h1 class="header" align="center"><%= @product.name %> </h1>
  <div class="plaintext">
    <b>Price:</b>
    <%= @product.price%>
  </div>

  <div class="plaintext">
    <b>Stock amount:</b>
    <%= @product.stock%>
  </div>
</div>

<div class="text-center form-group-lg-margin">
  <div class="btn-group">
    <%= link_to "<button class='btn btn-primary custom-btn me-3'>Edit</button>".html_safe, edit_product_path, :id=>"edit-product-form-btn" %>
    <%= link_to "<button class='btn btn-primary custom-btn me-3'>Delete</button>".html_safe, product_path(@product), method: :delete, data: {confirm: 'Are you sure you want to delete this product?'}, :id=>"delete-product-form-btn" %>
    <%= link_to "<button class='btn btn-primary custom-btn me-3'>Back to the catalog</button>".html_safe, products_path, :id=>"open-catalog-btn" %>
  </div>
</div>
	
	
	
	